- if cart.items.present?
  .box
    %aside.menu
      %h1.title カート

      .content
        %table.table.is-striped
          = render cart.items, current_item: current_item

          %tr
            %td{ colspan: 2 } 合計
            %td.has-text-right
              = number_to_currency(cart.total_price)

      = button_to 'カートを空にする', @cart, method: :delete, confirm: '本当によいですか？', class: "button is-secondary", remote: true
