= form_tag pay_credit_card_order_path(@order), id: "charge-form" do
  %span.charge-errors

  %h4 支払い
  %label カード番号
  = text_field_tag "number", nil, placeholder: "カード番号", maxlength: 16

  %label CVC
  = text_field_tag "cvc", nil, placeholder: "CVC", maxlength: 3

  %label 有効期限
  = text_field_tag "exp_month", nil, placeholder: "月", maxlength: 2
  = text_field_tag "exp_year", nil, placeholder: "年", maxlength: 4

  = submit_tag "支払う"
