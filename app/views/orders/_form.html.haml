= simple_form_for @order, wrapper: :default, defaults: { wrapper: false } do |f|
  - if f.error_notification.presence
    .notification.is-warning
      = f.error_notification

  = f.input :name
  = f.input :address
  = f.input :email
  = f.input :pay_type, prompt: "お支払い方法を選択してください"
  = f.button :submit, class: "button is-primary"
